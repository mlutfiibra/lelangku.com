<!DOCTYPE HTML>
<html>
<head>
<title>Lelangku</title>
</head>
<body>
    <h1>List Items</h1><br>
    <div>
        <% if(success){%>
            <h4>your data has successfully <%=success%>ed!</h4>
        <%}%>
        <%if(err){%>
            <h4><%= err %></h4>
        <% } %>
    </div>
    <table border="2px">
        <thead>
            <tr>
                <td>Image :</td>
                <td>Name :</td>
                <td>Price :</td>
                <td>Location :</td>
                <td>Auction Time Remaining :</td>
                <td>Options</td>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(function(member){ %>
            <tr>
                <td><img src="/<%=member.img_path%>"></td>
                <td><%= member.name %></td>
                <td><%= member.price %></td>
                <td><%= member.location %></td>
                <td><%= Math.round((86400000-(new Date()-member.createdAt))/3600000)%> hour(s) remaining</td>
                <td><a href = '/items/edit/<%= member.id %>'>Edit</a> || <a href = '/items/Delete/<%= member.id %>'>Delete</a></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html> 