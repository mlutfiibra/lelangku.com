<%- include('../partials/head', {title: 'Edit Item'}) %>
<%- include('../partials/navbar') %>
<div class="container">
    <div class="container-form text-center">
        <div class="row mt-15 mb-20">
            <div class="col-md-12">
                <h1>Edit Items</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div>
                        <label for="name" style="display:block">Product Name</label>
                        <input type="text" id="name" name= "name" value="<%=data.name%>">
                    </div>
                    <div class="mt-5">
                        <label for="price" style="display:block">Product Price</label>
                        <input type="number" id="price" name = "price" value="<%=data.price%>">
                    </div>
                    <div class="mt-5">
                        <label for="location" style="display:block">Location</label>
                        <input type="text" id="location" name = "location" value="<%=data.location%>">
                    </div>
                    <div class="mt-5">
                        <label for="avatar" style="display:block">Product Photo</label>
                        <input type="file" name="avatar"/>
                    </div>
                    <button class="btn btn-primary" type="submit">Edit Item</button>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>