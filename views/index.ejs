<%- include('./partials/head', {title: 'Landing Page'}) %>
<%- include('./partials/navbar') %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Lelangku</h2>
        </div>
    </div>
    <div class="row">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="/public/banner/1.jpg" alt="First slide" style="width: 100%;">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/public/banner/2.jpg" alt="Second slide" style="width: 100%;">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/public/banner/3.jpg" alt="Third slide" style="width: 100%;">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="row mt-15">
        <div class="col-md-12">
            <div class="section-header">
                Promo Item
            </div>
        </div>
        <% data.forEach(function(el){ %>
        <div class="col-md-3">
            <div class="card card-margin" style="width: 15rem;">
                <img src="<%=el.img_path ? el.img_path : 'https://via.placeholder.com/60x60' %>" class="card-img-top"
                    alt="...">
                <div class="card-body">
                    <h5 class="card-title fw-500"><%=el.name%></h5>
                    <p class="card-text fs-15 color-orange">
                        <%= Math.round((86400000-(new Date()-el.createdAt))/3600000)%> hour(s) remaining</p>

                    <p class="card-text color-grey3 fw-500"><%=el.location%></p>

                    <a href="/bid" class="btn btn-danger btn-block">Bid Now!</a>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>
<script>
    function countDown(i, callback) {
        callback = callback || function () {};
        var int = setInterval(function () {
            document.getElementById("displayDiv").innerHTML = "Number: " + i;
            i-- || (clearInterval(int), callback());
        }, 1000);
    }
</script>
<%- include('./partials/footer') %>